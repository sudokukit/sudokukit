{
  "name": "@sudokukit/core",
  "version": "0.0.3",
  "description": "Generate, Validate & Solve Sudoku Puzzles",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": ["**/*d.ts", "**/*.d.ts.map", "**/*.js", "**/*.js.map"],
  "scripts": {
    "build": "tsc && npm run copy:all",
    "copy:all": "npm run copy:package && npm run copy:readme && npm run copy:license",
    "copy:readme": "cp README.md dist",
    "copy:license": "cp LICENSE dist",
    "copy:package": "cp package.json dist",
    "hook:pre-commit": "npm run lint:staged",
    "hook:pre-push": "npm test",
    "lint:staged": "lint-staged --allow-empty",
    "lint:all": "biome check --write",
    "prepublishOnly": "npm run build",
    "postversion": "git push && git push --tags --no-verify",
    "release:patch": "npm version patch && npm run build && npm publish ./dist",
    "release:minor": "npm version minor && npm run build && npm publish ./dist",
    "release:major": "npm version major && npm run build && npm publish ./dist",
    "precompute": "tsx ./scripts/precompute.ts",
    "test": "vitest",
    "prepare": "husky"
  },
  "repository": { "type": "git", "url": "git+https://github.com/sudokukit/sudokukit.git" },
  "keywords": ["sudoku", "sudokukit", "typescript", "solver", "puzzle"],
  "author": "Coen Mooij",
  "license": "The Unlicense",
  "publishConfig": { "access": "public" },
  "bugs": { "url": "https://github.com/sudokukit/sudokukit/issues" },
  "homepage": "https://github.com/sudokukit/sudokukit#readme",
  "devDependencies": {
    "@biomejs/biome": "~2.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
