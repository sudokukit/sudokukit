{
  "include": ["src/**/*"],
  "exclude": ["vitest.config.ts", "tests/**/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "strict": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "paths": {
      "@sudokukit/constants": ["constants"],
      "@sudokukit/converters": ["converters"],
      "@sudokukit/generators": ["generators"],
      "@sudokukit/helpers": ["helpers"],
      "@sudokukit/luts": ["luts"],
      "@sudokukit/solvers": ["solvers"],
      "@sudokukit/types": ["types"]
    }
  }
}
