{
  "files": {
    "includes": ["./tsconfig.json", "./vitest.config.ts", ".lintstagedrc.json", "./src/**", "./tests/**", "README.md"]
  },
  "formatter": { "lineWidth": 120, "indentStyle": "space", "expand": "never" },
  "linter": {
    "rules": {
      "correctness": { "noUnusedImports": { "level": "error", "fix": "safe" } },
      "style": { "useImportType": "off" }
    }
  },
  "javascript": { "formatter": { "quoteStyle": "single" } }
}
